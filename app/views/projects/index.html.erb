<div class="container projects-container bg-white mt-4">
  <div class="h1-border">
    <h1>Projects</h1>
  </div>
  <div class="col">
    <div class="row project-cards">
      <%= link_to new_project_path, class: 'card-link' do %>
        <div class="project-card-new m-4 p-2 d-flex flex-column justify-content-between align-items-center shadow rounded">
          <h2 class="mt-2">Add a new project</h2>
          <i class="fas fa-plus-circle h-100 w-100 pb-4 d-flex justify-content-center align-items-center"></i>
        </div>
      <% end %>

      <% @projects.each do |project| %>
        <%= link_to project_path(project), class: 'card-link' do %>
          <div class="project-card m-4 p-2 d-flex flex-column justify-content-between align-items-center shadow rounded">
            <div>
              <h2 class="mt-2"><%= project.title %></h2>
              <h5 class="mt-2"><%= project.client.company %></h5>
            </div>

            <div class="circle-bar-container position-absolute">
              <input type="hidden" value="<%= ProjectProgressService.new(project).call %>">
            </div>

            <div class="project-progress">
              <!--<p>progress</p>-->
              <h1><%= ProjectProgressService.new(project).call %>%</h1>
            </div>

            <div class="infos row w-100">
                <div class="col-6">
                  <h6> <i class="fas fa-running"></i> sprint 1/3</h6>
                </div>
                <div
                  class="col-6 align-items-center">
                  <h6> <i class="fas fa-calendar-check"></i> 01/05/2020</h6>
                </div>
            </div>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
