<div class="container current-project bg-white mt-4">

  <div class="title">
    <h1 class="mb-4"><%= @project.title %></h1>
  </div>

<div class="row row-project">

  <div class="project-card-infos rounded col-3">
    <h3 class="mb-4"><i class="fas fa-building"></i> <%= @project.client.company %></h3>
    <h3 class="mb-4"><i class="fas fa-user-tie"></i> <%= @project.client.last_name %> <%= @project.client.first_name %></h3>
    <h3 class="mb-4"><i class="fas fa-mobile-alt"></i> <%= @project.client.phone %> </h3>
  </div>

  <div class="project-card-infos rounded col-3">
    <h2><i class="fas fa-running"></i> 1/3</h2>
  </div>

   <div class="project-card-progress rounded col-3">
    <div class="circle-bar-container position-absolute">
      <input type="hidden" value="<%= ProgressModule::ProjectProgressService.new(@project).call %>">
    </div>
    <div class="project-progress d-flex flex-column justify-content-center align-items-center h-100">
      <h3><%= ProgressModule::ProjectProgressService.new(@project).call %>%</h3>
    </div>
  </div>

  <div class="project-card-buttons rounded col-3 align-middle">
    <p><span class="contact"><i class="fas fa-calendar-check"></i> Last contact</span> ........ </p>
    <%= link_to sanitize("Send recap <i class='fas fa-paper-plane'></i>"), new_project_report_path(@project), class: 'btn btn-show btn-block' %>
    <div class="btn btn-show btn-block">Recap history <i class="fas fa-history"></i></div>
    <%= link_to @project.trello_board_url, class: 'btn btn-show btn-block', target: '_blank' do  %>
      <div>Go to Trello <i class="fab fa-trello"></i></div>
    <% end %>
  </div>

</div>


  <div class="us-container">
    <ul class="nav nav-tabs mt-5" id="myTab" role="tablist">
      <% @project.sprints.each_with_index do |sprint, index| %>
        <li class="nav-item">

          <a class="nav-link <%= "active" if index.zero? %>" id="<%= sprint.title.gsub(/\s+/, "") %>-tab" data-toggle="tab" href="#<%= sprint.title.gsub(/\s+/, "") %>" role="tab" aria-controls="<%= sprint.title.gsub(/\s+/, "") %>" aria-selected="true"> <i class="fas fa-running"></i> <%= sprint.title %></a>
          </li>

      <% end %>
      </li>
  </ul>

  <div class="tab-content" id="myTabContent">
    <% @project.sprints.each_with_index do |sprint, index| %>
      <div class="tab-pane fade show <%= "active" if index.zero? %>" id="<%= sprint.title.gsub(/\s+/, "") %>" role="tabpanel" aria-labelledby="<%= sprint.title.gsub(/\s+/, "") %>-tab">
        <% sprint.user_stories.each_with_index do |user_story, index| %>

        <a class ="us-card-link" href="#us<%= user_story.id %>" data-toggle="collapse" aria-expanded="false" aria-controls="us<%= user_story.id %>">
          <div class="user-story-card rounded shadow-sm p-5 mt-2 <%= "done" if user_story.done %>">
            <div class="row">
              <div class="col-3">
                <% if user_story.done %>
                  <div class="d-flex justify-content-center align-items-center">
                    <i class="far fa-check-square"></i> <p>Done</p>
                  </div>
                <% else %>
                  <div class="to-do d-flex justify-content-center align-items-center">
                    <i class="far fa-clock"></i> <p>To do</p>
                  </div>
                <% end %>
              </div>
              <div class="col-9">
                <h5>
                  <%= user_story.title %>
                </h5>
              </div>
            </div>
          </div>
        </a>
        <div class="collapse" id="us<%= user_story.id %>">
            <div class="rounded shadow-sm p-5 m-2 us-collapse">
              <div class="row">
                <div class="col-6 justify-content-arround">

                    <ul class='list-unstyled'>
                      <div class="row">
                        <li>
                          <div class="div m-2">
                            <h4 style="color: #034A9E"><i class="fas fa-comments"></i> Waiting for client callback</h4>
                              <% if user_story.tasks.where(current_status: "waiting client").count == 0 %>
                                <p>No tasks need client feedback</p>
                              <% else %>
                                <% user_story.tasks.where(current_status: "waiting client").each do |task| %>
                                  <ul>
                                    <li>
                                      <p><%= task.title %></p>
                                    </li>
                                  </ul>
                                <% end %>
                              <% end %>
                          </div>
                        </li>
                      </div>
                      <div class="row">
                        <li>
                          <div class="div m-2">
                            <h4 style="color: #034A9E"><i class="fas fa-user-clock"></i> Comming soon | to review</h4>
                            <% if user_story.tasks.where(current_status: "to review").count == 0 %>
                              <p>All tasks are "in progress" or "done" for this User story</p>
                            <% else %>
                              <% user_story.tasks.where(current_status: "to review").each do |task| %>
                                <ul>
                                  <li>
                                    <p><%= task.title %></p>
                                  </li>
                                </ul>
                              <% end %>
                            <% end %>
                          </div>
                        </li>
                      </div>
                    </ul>

                </div>
                <div class="col-6">
                  <div class="row justify-content-center" style="font-size: 20px"> Total tasks: <%= user_story.tasks.count %> </div>
                  <canvas id="usChart<%= user_story.id %>"></canvas>
                  <script>
                  var ctx = document.getElementById('usChart<%= user_story.id %>').getContext('2d');
                  // global option
                  Chart.defaults.global.defaultFontFamily = 'Roboto' ;
                  Chart.defaults.global.defaultFontSize = 15;
                  Chart.defaults.global.defaultFontColor = '#034A9E';

                  var myChart = new Chart(ctx, {
                      type: 'bar',
                      data: {
                        labels: ['To do', 'In progress', 'Waiting for client', 'To review', 'To deploy', 'Done'],
                        datasets: [{
                          label: 'Tasks',
                          data: [
                              <%=  user_story.tasks.where(current_status: "to do").count %>,
                              <%=  user_story.tasks.where(current_status: "in progress").count %>,
                              <%=  user_story.tasks.where(current_status: "waiting client").count %>,
                              <%=  user_story.tasks.where(current_status: "to review/debug").count %>,
                              <%=  user_story.tasks.where(current_status: "to deploy").count %>,
                              <%=  user_story.tasks.where(current_status: "done").count %>,
                          ],
                          backgroundColor: 'rgb(180, 202, 225)',
                          borderColor: 'rgb(3, 74, 158)',
                          borderWidth: 1,
                      }]
                      },
                      gridLines: {
                        display: false,
                      },
                      options: {
                        legend: {
                          display: false,
                        },
                        scales: {
                                xAxes: [{

                                    gridLines: {
                                        color: '#034A9E',
                                        drawOnChartArea: false
                                    }
                                }],
                                yAxes: [{
                                    gridLines: {
                                        color: '#034A9E',
                                        drawOnChartArea: false
                                    }
                                }]
                        }
                      },


                  });
                  </script>

                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  </div>
</div>
